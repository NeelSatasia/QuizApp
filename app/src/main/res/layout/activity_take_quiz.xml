<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TakeQuiz">

    <TextView
        android:id="@+id/quizTitleLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz Title"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <ScrollView
        android:id="@+id/mainScrlView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quizTitleLabel">

        <RelativeLayout
            android:id="@+id/mainRelLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/questionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Question"
                android:textSize="30dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/option1Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 1"
                android:layout_below="@+id/questionLabel"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/option2Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 2"
                android:layout_below="@+id/option1Btn"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/option3Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 3"
                android:layout_below="@+id/option2Btn"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/option4Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 4"
                android:layout_below="@+id/option3Btn"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainScrlView"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/backQuesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Back"
            app:backgroundTint="#CF3131" />

        <Button
            android:id="@+id/nextQuesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            app:backgroundTint="#4CAF50" />
    </LinearLayout>
</RelativeLayout>